<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="DarkBackground" Color="#1D1D1D"/>
    <SolidColorBrush x:Key="LightBackground" Color="#464646"/>

    <RadialGradientBrush x:Key="CornerDropShadow" Center="0,0" RadiusX="1" RadiusY="1" GradientOrigin="0,0">
        <GradientStop Color="Black" Offset="0.0"/>
        <GradientStop Color="#1D1D1D" Offset="1.0"/>
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="TopDropShadow" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="Black" Offset="0.0"/>
        <GradientStop Color="#1D1D1D" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LeftDropShadow" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="Black" Offset="0.0"/>
        <GradientStop Color="#1D1D1D" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TopDropShadow2" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="Black" Offset="0.0"/>
        <GradientStop Color="#313131" Offset="0.5"/>
    </LinearGradientBrush>
</ResourceDictionary>